@model IEnumerable<PharmaAssist2._0.Models.Cart>

@{
    ViewBag.Title = "ShowCart";
}

<h2>ShowCart</h2>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>My Cart</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/Content/all.css" />
</head>
<body>
   
    <div class="container-fluid" style="padding-top:2vh">
        
        <div class="container-fluid" align="center"><button type="button" class="btn btn-danger">Print</button></div>
        <br />
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">TotalPrice</th>
                   
                   
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int serial = 1;

                    foreach (var data in Model)
                    {

                            <tr>
                                <th scope="row">@serial</th>
                                <td>@data.Name</td>
                                <td>@data.Price</td>
                                <td>@data.Quantity</td>
                                <td>@data.Totalprice</td>
                                
                                <td>@Html.ActionLink("Delete", "Delete", new { id = data.Id }, new { @class = "btn btn-danger" })</td>
                            </tr>
                        serial += 1;
                    }

                }
                else
                {
                    <tr>
                        <td colspan="11" align="center"><span style="color:red">There is no product In the Cart</span></td>
                    </tr>
                }
            </tbody>
        </table>
       
     </div>  
</body>
</html>