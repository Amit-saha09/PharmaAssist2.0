@model List<PharmaAssist2._0.Models.Login>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>PharmaAssist | Pending Registrations(Doctors)</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/Content/all.css" />
</head>
<body>
    <!--navbar-->
    @RenderPage("~/Views/Admin/AdminNavbar.cshtml")
    <!--/navbar-->
    <div class="container-fluid" style="padding-top:2vh">
        <div class="container-fluid" align="center"><button type="button" class="btn btn-danger">Print</button></div>
        <br />
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Address</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Login Status</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    int serial = 1;

                    foreach (var data in Model)
                    {
                        <tr>
                            <th scope="row">@serial</th>
                            <td>@data.Email</td>
                            <td><span style="color:green"><i class="fas fa-check-circle"></i></span></td>
                            <td>Update</td>
                            <td>@Html.ActionLink("Restrict", "RejectLoginManager", new { id = data.Id }, new { @class = "btn btn-danger" })</td>
                        </tr>
                        serial += 1;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" align="center"><span style="color:red">No Data Found</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
