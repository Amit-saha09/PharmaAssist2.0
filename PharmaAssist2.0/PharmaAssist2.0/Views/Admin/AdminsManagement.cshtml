@model List<PharmaAssist2._0.Models.Admin>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PharmaAssist | Admins Management</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript" src="~/Scripts/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/Content/all.css" />

    <script type="text/javascript" src="~/Assets/jQuery/date.js"></script>
</head>
<body>
    <!--navbar-->
    @RenderPage("~/Views/Admin/AdminNavbar.cshtml")
    <!--/navbar-->
    <div class="container-fluid" style="padding-top:2vh">
        <!-- Button trigger modal -->
        <div align="center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Admin
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form method="post">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add New Admin</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" required>
                                <label for="floatingInput">Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Phone" required>
                                <label for="floatingInput">Phone</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Address" name="Address" placeholder="Address" required>
                                <label for="floatingInput">Address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <select class="form-select" id="Gender" name="Gender" aria-label="Floating label select example">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <label for="Gender">Gender</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="number" class="form-control" id="Salary" name="Salary" placeholder="Salary" required>
                                <label for="floatingInput">Salary</label>
                            </div>
                            <div div class="input-group mb-3">
                                <!--
                            <select class="form-select" id="month" name="month" aria-label="Floating label select example" style="width:calc(30%)">

                            </select>
                            <select class="form-select" id="day" name="day" aria-label="Floating label select example"  style="width:calc(30%)">

                            </select>
                            <select class="form-select" id="year" name="year" aria-label="Floating label select example"  style="width:calc(30%)">

                            </select>
                                -->

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- /Button trigger modal -->


    <div class="form-floating" style="padding-top:2vh">
        <input type="text" class="form-control" id="srchBynameTB" placeholder="Admin Name">
        <label for="floatingInput">Search by Admin Name</label>
    </div>
    <br />
    <div class="container-fluid" align="center"><button type="button" class="btn btn-danger">Print</button></div>
    <br />
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">DOB</th>
                <th scope="col">Address</th>
                <th scope="col">Salary</th>
                <th scope="col">Gender</th>
                <th scope="col">Login Status</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null || Model.Count > 0)
            {
                int serial = 1;

                foreach (var data in Model)
                {
                    if (data.Login.LoginStatus == 1)
                    {
                        <tr>
                            <th scope="row">@serial</th>
                            <td>@data.Name</td>
                            <td>@data.Login.Email</td>
                            <td>@data.Dob</td>
                            <td>@data.Address</td>
                            <td>@data.Salary</td>
                            <td>@data.Gender</td>
                            <td><span style="color:green"><i class="fas fa-check-circle"></i></span></td>
                            <td>Update</td>
                            <td>@Html.ActionLink("Restrict", "RejectLoginAdmin", new { id = data.Login.Id }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }
                    else
                    {
                        <tr class="table-danger">
                            <th scope="row">@serial</th>
                            <td>@data.Name</td>
                            <td>@data.Login.Email</td>
                            <td>@data.Dob</td>
                            <td>@data.Address</td>
                            <td>@data.Salary</td>
                            <td>@data.Gender</td>
                            <td><span style="color:red"><i class="fas fa-times-circle"></i></span></td>
                            <td>Update</td>
                            <td>@Html.ActionLink("Allow", "ApproveLoginAdmin", new { id = data.Login.Id }, new { @class = "btn btn-success" })</td>
                        </tr>
                    }
                    serial += 1;
                }
            }
            else
            {
                <tr>
                    <td colspan="10" align="center"><span style="color:red">No Data Found</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>
